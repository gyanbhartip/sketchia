{
	"name": "sketchia",
	"version": "0.1.0",
	"description": "a canvas library using react-native-skia",
	"source": "./src/index.tsx",
	"main": "./lib/commonjs/index.js",
	"module": "./lib/module/index.js",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./lib/typescript/module/src/index.d.ts",
				"default": "./lib/module/index.js"
			},
			"require": {
				"types": "./lib/typescript/commonjs/src/index.d.ts",
				"default": "./lib/commonjs/index.js"
			}
		}
	},
	"files": [
		"src",
		"lib",
		"android",
		"ios",
		"cpp",
		"*.podspec",
		"react-native.config.js",
		"!ios/build",
		"!android/build",
		"!android/gradle",
		"!android/gradlew",
		"!android/gradlew.bat",
		"!android/local.properties",
		"!**/__tests__",
		"!**/__fixtures__",
		"!**/__mocks__",
		"!**/.*"
	],
	"scripts": {
		"example": "yarn workspace sketchia-example",
		"test": "jest",
		"typecheck": "tsc",
		"lint": "eslint \"**/*.{js,ts,tsx}\"",
		"clean": "del-cli lib",
		"prepare": "bob build",
		"release": "release-it"
	},
	"keywords": [
		"react-native",
		"ios",
		"android",
		"canvas",
		"sketch",
		"skia"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gyanbhartip/sketchia.git"
	},
	"author": "Gyan Bharti <gyanbhartip@gmail.com> (https://github.com/gyanbhartip)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/gyanbhartip/sketchia/issues"
	},
	"homepage": "https://github.com/gyanbhartip/sketchia#readme",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^19.6.0",
		"@evilmartians/lefthook": "^1.10.3",
		"@react-native/eslint-config": "^0.76.6",
		"@release-it/conventional-changelog": "^10.0.0",
		"@shopify/react-native-skia": "^1.9.0",
		"@types/jest": "^29.5.14",
		"@types/react": "^18.3.18",
		"commitlint": "^19.6.1",
		"del-cli": "^6.0.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.1",
		"jest": "^29.7.0",
		"prettier": "^3.4.2",
		"react": "18.3.1",
		"react-native": "0.76.6",
		"react-native-builder-bob": "^0.35.2",
		"react-native-gesture-handler": "^2.22.0",
		"react-native-reanimated": "^3.16.6",
		"release-it": "^18.1.1",
		"typescript": "^5.7.3"
	},
	"peerDependencies": {
		"@shopify/react-native-skia": "^1.9.0",
		"react": "*",
		"react-native": "*",
		"react-native-gesture-handler": "^2.22.0",
		"react-native-reanimated": "^3.16.6"
	},
	"workspaces": [
		"example"
	],
	"packageManager": "yarn@4.5.3",
	"jest": {
		"preset": "react-native",
		"modulePathIgnorePatterns": [
			"<rootDir>/example/node_modules",
			"<rootDir>/lib/"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular"
			}
		}
	},
	"react-native-builder-bob": {
		"source": "src",
		"output": "lib",
		"targets": [
			"codegen",
			[
				"commonjs",
				{
					"esm": true
				}
			],
			[
				"module",
				{
					"esm": true
				}
			],
			[
				"typescript",
				{
					"project": "tsconfig.build.json",
					"esm": true
				}
			]
		]
	},
	"codegenConfig": {
		"name": "RNSketchiaSpec",
		"type": "modules",
		"jsSrcsDir": "src",
		"outputDir": {
			"ios": "ios/generated",
			"android": "android/generated"
		},
		"android": {
			"javaPackageName": "com.sketchia"
		}
	},
	"create-react-native-library": {
		"languages": "js",
		"type": "library",
		"version": "0.45.5"
	}
}
